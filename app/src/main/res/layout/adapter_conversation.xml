<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:id="@+id/layoutReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.application.wowwao1.Utils.CircleImageView
                android:id="@+id/imgReceiverProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:src="@drawable/no_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/receiver_chat_border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:fontFamily="@font/frieght_sans"
                    android:id="@+id/txtReceiverMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imgReceiverPost"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:fontFamily="@font/frieght_sans"
            android:id="@+id/txtReceiverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sender_chat_border"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:fontFamily="@font/frieght_sans"
                    android:id="@+id/txtSenderMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/imgSenderPost"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <com.application.wowwao1.Utils.CircleImageView
                android:id="@+id/imgSenderProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:src="@drawable/no_user" />
        </LinearLayout>

        <TextView
            android:fontFamily="@font/frieght_sans"
            android:id="@+id/txtSenderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>